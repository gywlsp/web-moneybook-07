{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": [
      "error",
      "always"
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "src/app.js"
        ]
      }
    ],
    "no-new": 0,
    "no-shadow": 0,
    "no-alert": 0
  },
  "ignorePatterns": [
    "src/frontend/public",
    "bin"
  ]
}